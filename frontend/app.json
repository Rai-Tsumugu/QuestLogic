{
  "expo": {
    "name": "QuestLogic",
    "slug": "questlogic",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#071028"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "宿題の学習前後を撮影してAI評価を行うためにカメラを使用します。",
        "NSPhotoLibraryUsageDescription": "学習前後のノート画像を選択するために写真ライブラリへアクセスします。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#071028"
      },
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES"
      ]
    },
    "plugins": [
      "expo-camera",
      "expo-image-picker"
    ]
  }
}
